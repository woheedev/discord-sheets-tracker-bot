{
  "name": "hazardous-tracker-bot",
  "version": "0.1.0",
  "type": "module",
  "description": "Hazardous Guild Tracker Bot",
  "main": "src/index.js",
  "scripts": {
    "start": "bun run src/index.js",
    "dev": "bun --watch run src/index.js",
